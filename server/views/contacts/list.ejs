<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">

    <div class="row">
        <div class="offset-md-1 col-md-10 text-center">
            <h1>ㅤㅤㅤㅤㅤㅤㅤ</h1>
            <h3><%= title %></h3>
            <h2>ㅤㅤㅤㅤㅤㅤㅤ</h2>
            <a href="/contact-list/add" class="btn btn-warning" role="button">
            <i class="fas fa-plus-circle"></i> Add a Contact </a>
            <br>
            <h2>ㅤㅤㅤㅤㅤㅤㅤ</h2>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Contact Name</th>
                    <th class="text-center col-2">Contact Number</th>
                    <th class="col-4">Email Address</th>
                    <th class="text-center col-2"></th>
                    <th class="text-center col-2"></th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactsList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-2"><%= ContactsList[count].name %></td>
                        <td class="text-center col-2"><%= ContactsList[count].number %></td>
                        <td class="col-4"><%= ContactsList[count].email %></td>
                        
                        <td class="text-center col-2">
                            <a href="/contact-list/edit/<%= ContactsList[count]._id %>" class="btn btn-light btn-sm">
                            <i class="fas fa-pencil-alt"></i> Update</a>
                        </td>
                        <td class="text-center col-2">
                            <a href="/contact-list/delete/<%= ContactsList[count]._id %>" class="btn btn-light btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





